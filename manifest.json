{
    "manifest_version": 3,
    "name": "Instagram Icon Inserter",
    "version": "1.0",
    "description": "Inserts a custom icon in Instagram Direct Messages",
    "permissions": [
        "activeTab",
        "https://api.merchant.staging.ercaspay.com/"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.instagram.com/direct/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ]
}